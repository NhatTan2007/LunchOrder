@{
    ViewBag.Title = "Register Account";
}

@model RegisterAccountViewModel
<div class="wrapper container">
    <div class="inner">
        <div class="card card-2">
            <div class="card-heading"></div>
            <div class="card-body">
                <form enctype="multipart/form-data" class="justify-content-center" asp-controller="Account" asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="error-summary h4 text-danger font-weight-bold"></div>
                    <h1 class="font-weight-bold mb-5 text-center text-uppercase">Registration Form</h1>
                    <div class="form-group">
                        <div class="form-wrapper">
                            <label class="h3" asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control">
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-wrapper">
                            <label class="h3" asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control">
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="ConfirmPasword"></label>
                        <input asp-for="ConfirmPasword" class="form-control">
                    </div>
                    <div class="form-group">
                        <div class="form-wrapper">
                            <label class="h3" asp-for="ClassId"></label>
                            <select asp-for="ClassId" class="form-control">
                                @foreach (Class classCg in Model.Classes)
                                {
                                    <option value="@classCg.ClassId">@classCg.ClassName</option>
                                }
                            </select>
                            <span asp-validation-for="ClassId"></span>
                        </div>
                        <div class="form-wrapper">
                            <label class="h3" asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control">
                        </div>
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="checkbox">
                        <label style="cursor: pointer">
                            <input id="terms" type="checkbox"><i class="ml-1 h5">I accept the Terms of Use & Privacy Policy.</i>
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="submit-btn" class="btn btn--radius btn--green" disabled="disabled">Register Now</button>
                        <button type="reset" class="btn btn--radius btn-warning">Reset</button>
                        <a class="btn btn--radius btn-dark" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>