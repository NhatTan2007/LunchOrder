@{
    ViewBag.Title = "Roles management";
}
@model List<RoleViewModel>
<div class="wrapper container">
    <div class="inner">
        <div class="h4 directions row pr-4">
            <a asp-controller="Home" asp-action="Admin" class="text-decoration-none">Admin areas</a>&gt;Manage roles
        </div>
        <div class="row pr-4">
            <a class="btn btn--radius btn--green col-2 mb-2" asp-controller="Role" asp-action="Create">Create role</a>
        </div>
        <div class="row pr-4">
            <div asp-validation-summary="ModelOnly" class="col-12"></div>
        </div>
        <div class="row pr-4">
            <table class="table table-bordered table-hover col-12">
                <thead class="thead-light">
                    <tr class="text-center h4">
                        <th class="align-middle">Id</th>
                        <th class="align-middle">Role name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RoleViewModel role in Model)
                    {
                        <tr class="h4">
                            <td class="align-middle">@role.RoleId</td>
                            <td class="align-middle">@role.RoleName</td>
                            <td class="align-middle">
                                <a class="btn btn-warning" asp-controller="Role" asp-action="Edit" asp-route-roleId="@role.RoleId" style="line-height: 3rem;">Edit</a>
                                <a class="btn btn-danger" asp-controller="Role" asp-action="Delete" asp-route-roleId="@role.RoleId" style="line-height: 3rem;" onclick="return confirmDeleteRole()">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
