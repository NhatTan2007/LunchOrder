@{
    ViewBag.Title = "Edit role";
}
@model EditRoleViewModel
<div class="wrapper container">
    <div class="inner">
        <div class="card card-2">
            <div class="card-body">
                <h1 class="text-center font-weight-bold">LOGIN FORM</h1>
                <form class="justify-content-center" asp-controller="Role" asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="error-summary h5 text-danger font-weight-bold"></div>
                    <div class="form-wrapper mb-2 row d-flex justify-content-center align-items-center">
                        <label class="h5 col-2" asp-for="RoleName"></label>
                        <input asp-for="RoleName" class="form-control col-10">
                        <span class="col-12" asp-validation-for="RoleName"></span>
                    </div>
                    <input asp-for="RoleId" value="@Model.RoleId" hidden />
                    <div class="form-group">
                        <button type="submit" class="btn btn--radius btn--green">Save</button>
                        <a class="btn btn--radius btn-danger" data-toggle="modal" data-target="#confirmDelRoleModal">Delete</a>
                        <button type="reset" class="btn btn--radius btn-warning">Reset</button>
                        <a asp-controller="Role" asp-action="Manage" class="btn btn--radius btn-dark">Cancel</a>
                    </div>
                </form>
                <!-- Modal -->
                <div id="confirmDelRoleModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Delete role confirm</h3>
                            </div>
                            <div class="modal-body">
                                <p class="h4">Are you sure want to remove this role?</p>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn--radius btn-danger" asp-controller="Role" asp-action="Delete" asp-route-roleId="@Model.RoleId">Confirm</a>
                                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

