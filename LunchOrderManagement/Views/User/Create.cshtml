@{
    ViewBag.Title = "Create user";
}

@model CreateUserViewModel
<div class="wrapper container">
    <div class="inner">
        <div class="card card-2">
            <div class="card-heading"></div>
            <div class="card-body">
                <form class="justify-content-center" asp-controller="User" asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="error-summary h4 text-danger font-weight-bold"></div>
                    <h1 class="font-weight-bold mb-5 text-center text-uppercase">Create user</h1>
                    <div class="form-group">
                        <div class="form-wrapper">
                            <label class="h3" asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control">
                        </div>
                        <div class="form-wrapper">
                            <label class="h3" asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control">
                        </div>
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control">
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="ConfirmPasword"></label>
                        <input asp-for="ConfirmPasword" class="form-control">
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="ClassId"></label>
                        <select asp-for="ClassId" class="form-control">
                            @foreach (Class classCg in Model.Classes)
                            {
                                <option value="@classCg.ClassId">@classCg.ClassName</option>
                            }
                        </select>
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="Roles"></label>
                        <select asp-for="RoleIds" class="form-control js-basic-multiple" id="roles" multiple>
                            @foreach (RoleViewModel rl in Model.Roles)
                            {
                                <option value="@rl.RoleId">@rl.RoleName</option>
                            }
                        </select>
                    </div>
                    <div class="form-wrapper">
                        <label class="h3" asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                    </div>
                    <div class="checkbox">
                        <label style="cursor: pointer">
                            <input id="terms" type="checkbox"><i class="ml-1 h5">I accept the Terms of Use & Privacy Policy.</i>
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="submit-btn" class="btn btn--radius btn--green" disabled="disabled">Create Now</button>
                        <button type="reset" class="btn btn--radius btn--green">Reset</button>
                        <a class="btn btn--radius btn--green" asp-controller="User" asp-action="Manage">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>